@import controls

.Checklist-
	.-header-
		display: flex
		align-items: center
		.-title
			flex-grow: 1
		.-status-
			opacity: 0.5
			.-expected:before
				content: "/"

	.-body-
		.-items-
			.-item-
				display: flex
				align-items: center
				border-bottom: 1px solid var(--border-color__lt)
				flex-wrap: wrap
				padding-top: 10px
				padding-bottom: 10px
				.-status:
					text-transform: uppercase
					border: 1px solid var(--text-color)
					display: inline-block
					font-size: 10px
					border-radius: 4px
					padding: 3px
					padding-left: 5px
					padding-right: 5px
					margin-right: 5px
					opacity: 0.75
				.-label
					flex-grow: 1
				.-value-
					flex-basis: 100%
					.-label
						font-size: 80%
					.-repr:
						margin: 15px
						margin-top: 10px
				&:first-child:
					border-top: 1px solid var(--border-color__lt)
				&[data-status="waiting"]:
					.-label
						opacity: 0.25
					.-status
						opacity: 0.10
				&[data-status="different"]:
					.-status:
						color: var(--error-color)
						border-color: var(--error-color)
					.-value.is-expected:
						border-color: var(--error-color)
// EOF
