.Status-
	position: fixed
	top: 0px
	left: 0px
	right: 0px
	.-status:
		position: absolute
		right:    20px
		top:      20px
		text-transform: uppercase
		border: 1px solid var(--text-color)
		display: inline-block
		font-size: 10px
		border-radius: 3px
		padding: 2px
		padding-left: 5px
		padding-right: 5px
		margin-right: 5px
		opacity: 0.75
		cursor: help
	.-tests-:
		display: flex
		height: 0px
		opacity: 0.0
		transition-property: height, opacity
		transition-duration: 0.35s
		.-test:
			flex-grow: 1
			background-color: transparent
			height: 100%
			margin-right: 1px
			&:last-child:
				margin-right: 0px
			&[data-status="waiting"]:
				background-color: var(--page-color__dk)
			&[data-status="failure"]:
				background-color: var(--error-color)
			&[data-status="success"]:
				background-color: var(--success-color)
		&:hover:
			height: 15px
	&[data-status="failure"]:
		.-status:
			font-weight: bold
			color: white
			border-color: var(--error-color)
			background-color: var(--error-color)
	&[data-status="success"]:
		.-status:
			color: white
			font-weight: bold
			border-color: var(--success-color)
			background-color: var(--success-color)
	&:hover:
		.-tests-:
			opacity: 1.0
			height:  10px

