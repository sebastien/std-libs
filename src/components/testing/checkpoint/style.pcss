@import controls

@keyframes waiting
	from:
		transform: rotate(0deg)
	50%:
		transform: rotate(180deg)
	to:
		transform: rotate(360deg)

.Checkpoint-
	display: flex
	align-items: center
	flex-wrap: wrap
	padding-top: 10px
	padding-bottom: 10px
	.-status:
		text-transform: uppercase
		border: 1px solid var(--text-color)
		display: inline-block
		font-size: 10px
		border-radius: 3px
		padding: 2px
		padding-left: 5px
		padding-right: 5px
		margin-right: 5px
		opacity: 0.75
	.-label
		flex-grow: 1
		cursor: pointer
		user-select: none
		&:before:
			display: inline-block
			transform: rotate(90deg)
			font-size: 80%
			content: "►"
			font-weight: bold
			margin-right: 5px
			width: 15px
	.-value-
		flex-basis: 100%
		margin-top: 5px
		margin-left: 20px
		border-left: 1px solid var(--border-color__lt)
		background-color: var(--page-color__alt)
		padding: 5px
		padding-left: 15px
		.-label
			font-size: 80%
	&!collapsed:
		.-label:before:
			transform: rotate(0deg)
		.-value:
			display: none

	&[data-value-type="simple"]:
		.-label
			cursor: default
			&:before:
				content: "●"
				transform: rotate(0deg)

	&[data-status="waiting"]:
		.-label
			opacity: 0.25
			&:before:
				content: "✱"
				position: relative
				top: -2px
				animation-name: waiting
				animation-duration: 1s
				animation-iteration-count: infinite
				animation-ease-in-out: linear
		.-status
			opacity: 0.10
	&[data-status="different"]:
		.-label
			&:before:
				color: var(--error-color)
		.-status
			color: var(--error-color)
			border-color: var(--error-color)
		.-value.is-actual
			border-color: var(--error-color)
